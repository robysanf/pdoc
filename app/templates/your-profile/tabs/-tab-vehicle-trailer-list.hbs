
<!-------------------- SHOW DRIVERS LIST ---------------------->
{{#if controller.transition_to_list}}
    <div class="row row-margin-top-bottom" >
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <form class="form-horizontal">
                <fieldset>
                    <div class="form-group">
                        <div class="col-lg-1">
                            <!-------------------- altre tab - cambio button tra edit/view/add ---------------------->
                            <button class="btn btn-primary btn-50" {{action 'create_record' this 'your-profile/main' false}}><span class="glyphicon glyphicon-plus"></span></button>
                        </div>
                        <div class="col-lg-11"><legend>{{app_controller.translation.details}}</legend> </div>
                    </div>

                    <div class="row" style="margin-top: 15px">
                        <div class="col-lg-12">
                            <table class="table table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>{{app_controller.translation.description}}</th>
                                    <th>{{app_controller.translation.brand}}</th>
                                    <th>{{app_controller.translation.model}}</th>
                                    <th>{{app_controller.translation.weight}}</th>
                                    <th>{{app_controller.translation.tare}}</th>

                                    <th>{{app_controller.translation.delete}}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#each vehicle in vehicles}}
                                    {{#if vehicle.isTrailer}}
                                        <tr>
                                            <td {{action 'transition_to' 'your-profile/partials/-vehicle-field' vehicle 'isView' true}} style="cursor: pointer">{{vehicle.description}}</td>
                                            <td {{action 'transition_to' 'your-profile/partials/-vehicle-field' vehicle 'isView' true}} style="cursor: pointer">{{vehicle.brand}}</td>
                                            <td {{action 'transition_to' 'your-profile/partials/-vehicle-field' vehicle 'isView' true}} style="cursor: pointer">{{vehicle.model}}</td>
                                            <td {{action 'transition_to' 'your-profile/partials/-vehicle-field' vehicle 'isView' true}} style="cursor: pointer">{{vehicle.weight}}</td>
                                            <td {{action 'transition_to' 'your-profile/partials/-vehicle-field' vehicle 'isView' true}} style="cursor: pointer">{{vehicle.tare}}</td>

                                            <td><a {{action 'open_modal' 'your-profile/modals/delete-record' vehicle this}} style="cursor: pointer"><span class="glyphicon glyphicon-trash"></span></a></td>
                                        </tr>
                                    {{/if}}
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="col-lg-1"></div>
    </div>
{{else}}


    <!--------------------- image logo --------------------->
    {{partial 'your-profile/partials/-logo'}}

    <!-------------------- SHOW DRIVER RECORD ---------------------->
    {{#if controller.isView}}
        <div class="row row-margin-top-bottom">
            <div class="col-lg-1"></div>
            <div class="col-lg-10">
                {{partial 'your-profile/partials/-vehicle-field'}}
            </div>
            <div class="col-lg-1"></div>
        </div>
    {{else}}
        <div class="well well-sm">
            <div class="row row-margin-top-bottom">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{partial 'your-profile/partials/-vehicle-field'}}
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
    {{/if}}
    <!--------------------- document - view --------------------->
    {{#if controller.isView_docList}}
        <div class="row row-margin-top-bottom">
            <div class="col-lg-1"></div>
            <div class="col-lg-10">
                {{partial 'your-profile/partials/-sub-record-document-list'}}
            </div>
            <div class="col-lg-1"></div>
        </div>
    {{else}}
        <!--------------------- document - edit --------------------->
        <div class="well well-sm">
            <div class="row row-margin-top-bottom">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{partial 'your-profile/partials/-company-document-edit'}}
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
    {{/if}}
{{/if}}
