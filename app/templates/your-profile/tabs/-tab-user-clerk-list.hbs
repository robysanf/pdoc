
<!-------------------- SHOW DRIVERS LIST ---------------------->
{{#if controller.transition_to_list}}
    <div class="row" style="margin-top: 45px">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>{{app_controller.translation.firstName}}</th>
                    <th>{{app_controller.translation.lastName}}</th>

                    <th>{{app_controller.translation.delete}}</th>
                </tr>
                </thead>
                <tbody>
                {{#each user in users}}
                    {{#if user.isClerk}}
                        <tr>
                            <td {{action 'transition_to' 'your-profile/partials/-user-field' user}} style="cursor: pointer">{{user.firstName}}</td>
                            <td {{action 'transition_to' 'your-profile/partials/-user-field' user}} style="cursor: pointer">{{user.lastName}}</td>

                            <td><a {{action 'open_modal' 'your-profile/modals/delete-record' user this}} style="cursor: pointer"><span class="glyphicon glyphicon-trash"></span></a></td>
                        </tr>
                    {{/if}}
                {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-lg-1"></div>
    </div>
{{else}}

    <!-------------------- SHOW DRIVER RECORD ---------------------->
    {{#if controller.isView}}
        <div class="row row-margin-top-bottom">
            <div class="col-lg-1"></div>
            <div class="col-lg-10">
                {{partial 'your-profile/partials/-user-field'}}
            </div>
            <div class="col-lg-1"></div>
        </div>
    {{else}}
        <div class="well well-sm">
            <div class="row row-margin-top-bottom">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{partial 'your-profile/partials/-user-field'}}
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
    {{/if}}
{{/if}}
