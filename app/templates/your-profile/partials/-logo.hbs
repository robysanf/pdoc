
{{#if can_edit_company}}   <!-- puÃ² modificare solo il proprietario della company o i clerks-->
<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <div class="form-group">
            <div class="col-lg-1">
                <!-------------------- pencil ---------------------->
                {{#if controller.isView_logo}}
                    <button class="btn btn-primary btn-50" {{action 'set_variable' 'isView_logo' false}}><span class="glyphicon glyphicon-pencil"></span></button>

                    <!-------------------- ok ---------------------->
                {{else}}
                    <button class="btn btn-primary btn-50" {{action 'save_logo' this.id 'isView_logo' true}}><span class="glyphicon glyphicon-ok"></span></button>
                {{/if}}
            </div>
            <div class="col-lg-11" style="margin-top: 35px"><legend></legend></div>
        </div>
    </div>
    <div class="col-lg-1"></div>
</div>
{{/if}}

<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-4">
        {{#if controller.isView_logo}}
            <div class="fileinput fileinput-new" data-provides="fileinput">
                <div class="fileinput-new thumbnail" style="width: 250px; height: 250px;">
                    {{#each file in files}}
                        {{#if file.isLogo}}
                            <img data-src="api/files/'{{file.id}}'?token={{unbound app_controller.token}}/stream=true">
                        {{/if}}
                    {{/each}}

                </div>
            </div>
        {{else}}
            {{#view 'upload-image'}}
                <div class="fileinput fileinput-new" data-provides="fileinput">
                    <div class="fileinput-new thumbnail" style="width: 250px; height: 250px;">
                        <img data-src="">
                        <span class="glyphicon glyphicon-picture" style="font-size: 200px;"></span>
                    </div>
                    <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 250px; max-height: 250px;"></div>
                    <div>
                    <span class="btn btn-default btn-file">
                        <span class="fileinput-new">Select image</span>
                        <span class="fileinput-exists">Change</span>
                        <input type="file" name="...">
                    </span>
                        <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                    </div>
                </div>
            {{/view}}
        {{/if}}
    </div>
    <div class="col-lg-3">
        {{#if is_admin_or_clerk}}
            {{#if controller.tabList.company}}
                {{#if serviceScore}}
                    <div class="panel panel-primary">
                        <div class="panel-heading"><h3>Service rating</h3></div>
                        <div class="panel-body">
                            <div class="row">
                                <a {{action 'open_modal' 'your-profile/modals/show-rating' null this 'service'}} style="cursor: pointer"><span class="label label-primary pull-right" style="margin-right: 8px">Show 14 ratings</span>  </a>
                            </div>
                            <div class="row">
                                {{speed-meter speed=10 target='speed1' rateSize=55  custom_height=130}}
                            </div>

                        </div>
                    </div>
                {{else}}
                    {{#view 'tooltip'}}
                        <button type="button" class="btn btn-primary btn-group-justified" data-toggle="tooltip" data-placement="left" {{action 'custom_showRating' this.id 'service'}} title="You will be charged 1 credit to see the rating for 15 days.">Show service rating</button>
                    {{/view}}
                {{/if}}
            {{/if}}
        {{/if}}

    </div>
    <div class="col-lg-3">
        {{#if is_admin_or_clerk}}
            {{#if certificationScore}}
                <div class="panel panel-primary">
                    <div class="panel-heading"><h3>Certific. rating</h3></div>
                    <div class="panel-body">
                        <div class="row">
                            <a {{action 'open_modal' 'your-profile/modals/show-certification-rating' null this 'certification'}} style="cursor: pointer"><span class="label label-primary pull-right" style="margin-right: 8px">Show 14 ratings</span></a>
                        </div>
                        <div class="row">
                            {{speed-meter speed=43 target='speed2' rateSize=55  custom_height=130}}
                        </div>
                    </div>
                </div>
            {{else}}
                {{#view 'tooltip'}}
                    <button type="button" class="btn btn-primary btn-group-justified" data-toggle="tooltip" data-placement="right" title="You will be charged 1 credit to see the rating for 15 days." {{action 'custom_showRating' this.id 'certification'}}>Show certification rating</button>
                {{/view}}
            {{/if}}

        {{/if}}

    </div>
    <div class="col-lg-1"></div>
</div>


