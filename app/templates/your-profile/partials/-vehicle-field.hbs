<form class="form-horizontal">
    <fieldset>
        <legend>
            {{#if controller.isView}}
                <a {{action 'change_state' 'your-profile/main' false}} style="cursor: pointer"> <span class="glyphicon glyphicon-pencil btn-font-color"></span></a>
            {{else}}
                <a {{action 'set_record' 'companyDetails' 'your-profile/main' false}} style="cursor: pointer"><span class="glyphicon glyphicon-ok btn-font-color"></span></a>
            {{/if}}
            &nbsp;
            {{app_controller.translation.details}}

            <!-------------------- button return-to-list ---------------------->
            <span {{action 'transition_to' 'your-profile/partials/-tab-user-driver-list' null 'isView' true 'transition_to_list' true}} style="cursor: pointer" class="pull-right">
                <strong style="color: #4582ec;">List</strong>
                <span class="glyphicon glyphicon-chevron-right btn-font-color"></span>
            </span>
        </legend>
        <div class="form-group">
            <label for="name" class="col-lg-3 control-label">{{app_controller.translation.name}}</label>
            <div class="col-lg-9">
                {{#if controller.isView}}
                    {{#if controller.sub_record.name}}
                        <p style="margin-top: 10px; border-bottom: 1px solid #e5e5e5;">{{controller.sub_record.name}}</p>
                    {{else}}
                        <p style="margin-top: 25px; border-bottom: 1px solid #e5e5e5;"></p>
                    {{/if}}
                {{else}}
                    {{input value = controller.sub_record.name type = "text" class = "form-control"  disabled= controller.isView}}
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="col-lg-3 control-label">{{app_controller.translation.brand}}</label>
            <div class="col-lg-9">
                {{#if controller.isView}}
                    {{#if controller.sub_record.brand}}
                        <p style="margin-top: 10px; border-bottom: 1px solid #e5e5e5;">{{controller.sub_record.brand}}</p>
                    {{else}}
                        <p style="margin-top: 25px; border-bottom: 1px solid #e5e5e5;"></p>
                    {{/if}}
                {{else}}
                    {{input value = controller.sub_record.brand type = "text" class = "form-control"  disabled= controller.isView}}
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="col-lg-3 control-label">{{app_controller.translation.model}}</label>
            <div class="col-lg-9">
                {{#if controller.isView}}
                    {{#if controller.sub_record.model}}
                        <p style="margin-top: 10px; border-bottom: 1px solid #e5e5e5;">{{controller.sub_record.model}}</p>
                    {{else}}
                        <p style="margin-top: 25px; border-bottom: 1px solid #e5e5e5;"></p>
                    {{/if}}
                {{else}}
                    {{input value = controller.sub_record.vehicleModel type = "text" class = "form-control"  disabled= controller.isView}}
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="col-lg-3 control-label">{{app_controller.translation.description}}</label>
            <div class="col-lg-9">
                {{#if controller.isView}}
                    {{#if controller.sub_record.description}}
                        <p style="margin-top: 10px; border-bottom: 1px solid #e5e5e5;">{{controller.sub_record.description}}</p>
                    {{else}}
                        <p style="margin-top: 25px; border-bottom: 1px solid #e5e5e5;"></p>
                    {{/if}}
                {{else}}
                    {{input value = controller.sub_record.description type = "text" class = "form-control"  disabled= controller.isView}}
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="col-lg-3 control-label">{{app_controller.translation.configuration}}</label>
            <div class="col-lg-9">
                {{#if controller.isView}}
                    {{#if controller.sub_record.configurations}}
                        {{#each configurations}}
                            <p style="margin-top: 10px; border-bottom: 1px solid #e5e5e5;">{{this}}</p>
                        {{/each}}
                    {{else}}
                        <p style="margin-top: 25px; border-bottom: 1px solid #e5e5e5;"></p>
                    {{/if}}
                {{else}}
                    {{auto-suggest source=app_controller.auto_suggest_Configurations destination=controller.sub_record.configurations searchPath="value" usecase="customMode" minChars=0}}
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="col-lg-3 control-label">{{app_controller.translation.registrationYear}}</label>
            <div class="col-lg-9">
                {{#if controller.isView}}
                    {{#if controller.sub_record.registrationYear}}
                        <p style="margin-top: 10px; border-bottom: 1px solid #e5e5e5;">{{controller.sub_record.registrationYear}}</p>
                    {{else}}
                        <p style="margin-top: 25px; border-bottom: 1px solid #e5e5e5;"></p>
                    {{/if}}
                {{else}}
                    {{date-picker date=controller.sub_record.registrationYear valueFormat='YYYY-MM-DD' class="form-control" disabled= controller.isView}}
                    {{!{{input value = controller.sub_record.registrationYear type = "date" class="form-control" disabled= controller.isView}}
                {{/if}}
            </div>
        </div>

    {{#if isTrailer}}
        <div class="form-group">
            <label for="name" class="col-lg-3 control-label">{{app_controller.translation.chassisNumber}}</label>
            <div class="col-lg-9">
                {{#if controller.isView}}
                    {{#if controller.sub_record.chassisNumber}}
                        <p style="margin-top: 10px; border-bottom: 1px solid #e5e5e5;">{{controller.sub_record.chassisNumber}}</p>
                    {{else}}
                        <p style="margin-top: 25px; border-bottom: 1px solid #e5e5e5;"></p>
                    {{/if}}
                {{else}}
                    {{input value = controller.sub_record.chassisNumber type = "text" class="form-control" disabled= controller.isView}}
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="col-lg-3 control-label">{{app_controller.translation.weight}}</label>
            <div class="col-lg-9">
                {{#if controller.isView}}
                    {{#if controller.sub_record.weight}}
                        <p style="margin-top: 10px; border-bottom: 1px solid #e5e5e5;">{{controller.sub_record.weight}}</p>
                    {{else}}
                        <p style="margin-top: 25px; border-bottom: 1px solid #e5e5e5;"></p>
                    {{/if}}
                {{else}}
                    {{input value = controller.sub_record.weight type = "number" class="form-control" disabled= controller.isView}}
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="col-lg-3 control-label">{{app_controller.translation.tare}}</label>
            <div class="col-lg-9">
                {{#if controller.isView}}
                    {{#if controller.sub_record.tare}}
                        <p style="margin-top: 10px; border-bottom: 1px solid #e5e5e5;">{{controller.sub_record.tare}}</p>
                    {{else}}
                        <p style="margin-top: 25px; border-bottom: 1px solid #e5e5e5;"></p>
                    {{/if}}
                {{else}}
                    {{input value = controller.sub_record.tare type = "number" class="form-control" disabled= controller.isView}}
                {{/if}}
            </div>
        </div>
    {{else}}
        <div class="form-group">
            <label for="name" class="col-lg-3 control-label">{{app_controller.translation.category}}</label>
            <div class="col-lg-9">
                {{#if controller.isView}}
                    {{#if controller.sub_record.category}}
                        <p style="margin-top: 10px; border-bottom: 1px solid #e5e5e5;">{{controller.sub_record.category}}</p>
                    {{else}}
                        <p style="margin-top: 25px; border-bottom: 1px solid #e5e5e5;"></p>
                    {{/if}}
                {{else}}
                    {{input value = controller.sub_record.category type = "string" class="form-control" disabled= controller.isView}}
                {{/if}}
            </div>
        </div>

    {{/if}}

    </fieldset>
</form>