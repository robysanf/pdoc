<div class="modal-header">
    <button type="button" class="close" {{action close 'overview' 'application' target="view"}}>&times;</button>
    <h3>Change password</h3>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <label>{{app_controller.translation.CurrentPassword}} </label>
            {{input value=curr_pwd class='form-control' type="password"}}
        </div>
        <div class="col-lg-3"></div>
    </div>
    <div class="row">
        <h5 class="page-header"></h5>
    </div>
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <label> {{app_controller.translation.NewPassword}} </label>
            {{input value=new_pwd class='form-control' type="password"}}
        </div>
        <div class="col-lg-3"></div>
    </div>
    <br>
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <label> {{app_controller.translation.ConfirmNewPassword}} </label>
            {{input value=confirm_pwd class='form-control' type="password"}}
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>
<div class="modal-footer">
    <a href="#" class="btn" {{action 'close' 'overview' 'application' target="view"}}>{{app_controller.translation.Close}} </a>
    <a href="#" class="btn btn-primary" {{action 'change_password' curr_pwd new_pwd confirm_pwd 'overview' 'application' target="view"}}>{{app_controller.translation.save}}</a>
</div>