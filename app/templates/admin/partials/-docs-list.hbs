<!------------------------ TAB HEADER ( admin/tabs/-tab-docs-list.hbs )--------------------------->
<!------------------------ TAB BODY --------------------------->

<!------------------------ PRIMA RIGA --------------------------->
<tr>
    <td rowspan="5">
        <!------------------------ document name --------------------------->
        <h5>
            <div class="row">
                {{#if mode_view}}
                    <div class="col-lg-2">
                        <button class="btn btn-primary btn-50" {{action 'open_modal' 'admin/modals/delete-record' docTemp this}}><span class="glyphicon glyphicon-trash"></span></button>
                    </div>
                    <div class="col-lg-10">
                        {{docTemp.name}}
                    </div>
                {{else}}
                    <div class="col-lg-12">
                        {{input type="text" class="form-control" value=docTemp.name}}
                    </div>
                {{/if}}
            </div>
        </h5>
    </td>
    <td>
        <!------------------------ goodsConfiscation --------------------------->
        {{#if mode_view}}
            {{#if docTemp.goodsConfiscation}}
                <span class="glyphicon glyphicon glyphicon-check"></span>
            {{else}}
                <span class="glyphicon glyphicon glyphicon-unchecked"></span>
            {{/if}}
            &nbsp
            {{app_controller.translation.goodsConfiscation}}
        {{else}}
            {{#if docTemp.goodsConfiscation}}
                <span class="glyphicon glyphicon glyphicon-check btn-font-color" style="cursor: pointer; margin-top: 5px" {{action 'set_record' docTemp 'goodsConfiscation' false}}></span>
            {{else}}
                <span class="glyphicon glyphicon glyphicon-unchecked btn-font-color" style="cursor: pointer; margin-top: 5px" {{action 'set_record' docTemp 'goodsConfiscation' true}}></span>
            {{/if}}
            &nbsp
            {{app_controller.translation.goodsConfiscation}}
        {{/if}}
    </td>
    <td>
        <!------------------------ vehicleConfiscation --------------------------->
        {{#if mode_view}}
            {{#if docTemp.vehicleConfiscation}}
                <span class="glyphicon glyphicon glyphicon-check"></span>
            {{else}}
                <span class="glyphicon glyphicon glyphicon-unchecked"></span>
            {{/if}}
            &nbsp
            {{app_controller.translation.vehicleConfiscation}}
        {{else}}
            {{#if docTemp.vehicleConfiscation}}
                <span class="glyphicon glyphicon glyphicon-check btn-font-color" style="cursor: pointer; margin-top: 5px" {{action 'set_record' docTemp 'vehicleConfiscation' false}}></span>
            {{else}}
                <span class="glyphicon glyphicon glyphicon-unchecked btn-font-color" style="cursor: pointer; margin-top: 5px" {{action 'set_record' docTemp 'vehicleConfiscation' true}}></span>
            {{/if}}
            &nbsp
            {{app_controller.translation.vehicleConfiscation}}
        {{/if}}
    </td>

    <!------------------------ VALE DUE RIGHE --------------------------->
    <td rowspan="2">
        <!------------------------ rate - limit --------------------------->
        <div class="form-group">
            <label class="control-label">{{app_controller.translation.rate}}</label>
            {{input type="number" class="form-control" value=docTemp.rateValue disabled = mode_view}}
        </div>
    </td>
    <!------------------------ VALE DUE RIGHE --------------------------->
    <td rowspan="2">
        <div class="form-group">
            <label class="control-label">{{app_controller.translation.limit}}</label>
            {{input type="number" class="form-control" value=docTemp.limit disabled = mode_view}}
        </div>
    </td>
</tr>
