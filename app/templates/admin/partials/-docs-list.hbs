<!------------------------ TERZA RIGA --------------------------->
<tr>
    <td>
        <div class="form-group">
            {{#if docTemp.isValidity}}
                <label class="control-label">
                    {{app_controller.translation.validity}}  <span class="glyphicon glyphicon glyphicon-ok"></span>
                </label>
            {{else}}
                <label class="control-label">
                    {{app_controller.translation.validity}}
                </label>
            {{/if}}
            {{#if mode_view}}
                {{input value = docTemp.validityNum type = "number" class = 'form-control' disabled = true}}
            {{else}}
                {{input value = docTemp.validityNum type = "number" class = 'form-control' disabled = docTemp.isDeadline}}
            {{/if}}

        </div>
    </td>
    <td style="padding-top: 32px">
        {{#if mode_view}}
            {{view "select" content=type_period value=docTemp.validityType placeholder="Choose a period" class='form-control' disabled = true}}
        {{else}}
            {{view "select" content=type_period value=docTemp.validityType placeholder="Choose a period" class='form-control' disabled = docTemp.isDeadline}}
        {{/if}}

    </td>
    <td colspan="2">
        <div class="form-group">
            {{#if docTemp.deadline}}
                <label class="control-label">
                    {{app_controller.translation.deadline}}  <span class="glyphicon glyphicon glyphicon-ok"></span>
                </label>
            {{else}}
                <label class="control-label">
                    {{app_controller.translation.deadline}}
                </label>
            {{/if}}

            {{#if mode_view}}
                {{input value = docTemp.showDeadline type = "text" class = 'form-control' disabled = true}}
            {{else}}
                {{#if docTemp.isValidity}}
                    {{input value = docTemp.showDeadline type = "text" class = 'form-control' disabled = true}}
                {{else}}
                    {{bootstrap-datepicker
                    value = docTemp.deadline
                    clearBtn = true
                    placeholder = "Select a date"
                    class = "form-control"
                    autoclose = true}}
                {{/if}}


                {{!{{input value = docTemp.deadline type = "date" class = 'form-control' format="YYYY-MM-DD" disabled = docTemp.isValidity}}
            {{/if}}
            {{!{{date-picker date=docTemp.deadline valueFormat='YYYY-MM-DD' class="form-control" disabled= controller.isValidity}}

        </div>
    </td>
</tr>
<!------------------------ QUARTA RIGA --------------------------->
<tr>
    <td>
        <div class="form-group">
            <label class="control-label">{{app_controller.translation.alert}}</label>
            {{input type="number" class="form-control" value=docTemp.alertNum disabled = mode_view}}
        </div>
    </td>
    <td style="padding-top: 32px">{{view "select" content=type_period value=docTemp.alertType placeholder="Choose a period" class='form-control' disabled = mode_view }}</td>
    <td>
        <div class="form-group">
            <label class="control-label">{{app_controller.translation.grace}}</label>
            {{input type="number" class="form-control" value=docTemp.graceNum disabled = mode_view}}
        </div>
    </td>
    <td style="padding-top: 32px">{{view "select" content=type_period value=docTemp.graceType placeholder="Choose a period" class='form-control'disabled = mode_view }}</td>
</tr>
<!------------------------ QUINTA RIGA --------------------------->
<tr>
    <td colspan="4">
        <div class="form-group">
            <label class="control-label">
                {{#unless mode_view}}
                    <span {{action "open_modal" 'admin/modals/add-file' null docTemp}} style="cursor: pointer;" class="btn-font-color glyphicon glyphicon-plus"></span>
                {{/unless}}

                {{app_controller.translation.files}}
            </label>
            {{#if mode_view}}
                {{#each file in docTemp.files}}
                    <br>
                    <span {{action "download_file" file.id}} style="cursor: pointer;" class="btn-font-color">{{file.name}}</span>
                {{/each}}
            {{else}}
                {{#each file in docTemp.files}}
                    <br>
                    <span {{action 'open_modal' 'admin/modals/delete-record' file this}} style="cursor: pointer;" class="glyphicon glyphicon-trash btn-font-color"></span> &nbsp; {{file.name}}

                {{/each}}
            {{/if}}
        </div>
    </td>
</tr>