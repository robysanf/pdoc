<div class="row" style="margin-top: 45px">
    <div class="col-lg-12">
        <table class="table table-condensed">
            <thead>
            <!------------------------ TAB HEADER --------------------------->
            <tr>
                <th style="width: 32%">
                    {{#if mode_view}}
                        <a {{action 'change_mode' 'mode_view' false}}><span class="glyphicon glyphicon-pencil btn-font-color" style="cursor: pointer"></span></a>
                        &nbsp;
                        {{app_controller.translation.documents}}
                    {{else}}
                        <a {{action 'set_docTemplates' docTemplates 'mode_view' true}}><span class="glyphicon glyphicon-ok btn-font-color" style="cursor: pointer"></span></a>
                        &nbsp;
                        {{app_controller.translation.documents}}
                    {{/if}}
                </th>
                <th style="width: 17%">{{app_controller.translation.details}}</th>
                <th style="width: 17%"></th>
                <th style="width: 17%"></th>
                <th style="width: 17%"></th>
            </tr>
            </thead>
            <tbody>
            {{#each docTemp in docTemplates}}
                {{#if controller.tabList.company}}
                    {{#if docTemp.isCompany}}
                        {{partial 'admin/partials/-docs-list'}}
                    {{/if}}
                {{else}}
                    {{#if controller.tabList.driver}}
                        {{#if docTemp.isDriver}}
                            {{partial 'admin/partials/-docs-list'}}
                        {{/if}}
                    {{else}}
                        {{#if controller.tabList.truck}}
                            {{#if docTemp.isTruck}}
                                {{partial 'admin/partials/-docs-list'}}
                            {{/if}}
                        {{else}}
                            {{#if controller.tabList.trailer}}
                                {{#if docTemp.isTrailer}}
                                    {{partial 'admin/partials/-docs-list'}}
                                {{/if}}
                            {{/if}}
                        {{/if}}
                    {{/if}}
                {{/if}}
            {{/each}}
            </tbody>
        </table>
    </div>
</div>