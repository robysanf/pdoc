<div class="row">
    <div class="col-lg-7"></div>
    <div class="col-lg-4">
        {{#unless certifier}}
            {{#unless app_controller.is_certifier}}
                <div class="alert alert-dismissable alert-danger">
                    <button type="button" class="close" data-dismiss="alert">Ã—</button>
                    <strong>Connect with a certifier to set your payment details.</strong><br />
                    <a style="color: #ffffff; cursor: pointer" {{action 'link_to' 'your-profile/main' app_controller.company_id}}>Click here to return to your company.</a>
                </div>
            {{/unless}}
        {{/unless}}
    </div>
    <div class="col-lg-1"></div>
</div>
<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <form class="form-horizontal">
            <fieldset>
                {{#if certifier}}
                    <!-------------------- BUTTON ---------------------->
                    <div class="form-group">
                        <div class="col-lg-1">
                            <!-------------------- pencil ---------------------->
                            {{#if controller.mode_view}}
                                <button class="btn btn-primary btn-50" {{action 'change_mode' 'mode_view' false}}><span class="glyphicon glyphicon-pencil"></span></button>

                                <!-------------------- ok ---------------------->
                            {{else}}
                                <button class="btn btn-primary btn-50" {{action 'send_toStripe' 'mode_view' true}}><span class="glyphicon glyphicon-ok"></span></button>
                            {{/if}}
                        </div>
                        <div class="col-lg-11"><legend style="margin-top: 35px"></legend></div>
                    </div>
                {{/if}}

                <!-------------------- FIELDS ---------------------->
                {{#if controller.mode_view}}
                    <div class="form-group">
                        <label for="name" class="col-lg-3 control-label">{{app_controller.translation.name}}</label>
                        <div class="col-lg-9">
                            {{#if name}}
                                <p style="margin-top: 10px; border-bottom: 1px solid #e5e5e5;">{{name}}</p>
                            {{else}}
                                <p style="margin-top: 25px; border-bottom: 1px solid #e5e5e5;"></p>
                            {{/if}}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-lg-3 control-label">{{app_controller.translation.certificationCredit}}</label>
                        <div class="col-lg-9">
                            {{#if certificationCredit}}
                                <p style="margin-top: 10px; border-bottom: 1px solid #e5e5e5;">{{certificationCredit}}</p>
                            {{else}}
                                <p style="margin-top: 25px; border-bottom: 1px solid #e5e5e5;"></p>
                            {{/if}}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-lg-3 control-label">{{app_controller.translation.visualizationCredit}}</label>
                        <div class="col-lg-9">
                            {{#if visualizationCredit}}
                                <p style="margin-top: 10px; border-bottom: 1px solid #e5e5e5;">{{visualizationCredit}}</p>
                            {{else}}
                                <p style="margin-top: 25px; border-bottom: 1px solid #e5e5e5;"></p>
                            {{/if}}
                        </div>
                    </div>
                {{/if}}
                <div class="form-group">
                    <label for="name" class="col-lg-3 control-label">{{app_controller.translation.cardNumber}}</label>
                    <div class="col-lg-9">
                        {{#if controller.mode_view}}
                            {{#if cardNumber}}
                                <p style="margin-top: 10px; border-bottom: 1px solid #e5e5e5;">{{hideCardNumber}}</p>
                            {{else}}
                                <p style="margin-top: 25px; border-bottom: 1px solid #e5e5e5;"></p>
                            {{/if}}
                        {{else}}
                            <div class="input-group">
                                {{input type='string' maxlength=4 value= controller.cardNumber1 class='form-control'}}
                                <span class="input-group-addon">-</span>
                                {{input type='string' maxlength=4 value= controller.cardNumber2 class='form-control'}}
                                <span class="input-group-addon">-</span>
                                {{input type='string' maxlength=4 value= controller.cardNumber3 class='form-control'}}
                                <span class="input-group-addon">-</span>
                                {{input type='string' maxlength=4 value= controller.cardNumber4 class='form-control'}}
                            </div>
                        {{/if}}
                    </div>
                </div>
                {{#unless controller.mode_view}}
                    <div class="form-group">
                        <label for="name" class="col-lg-3 control-label">CVC</label>
                        <div class="col-lg-3">
                            {{input type='string' maxlength=4 value= controller.cvc class='form-control' placeholder='CVC'}}
                        </div>
                        <label for="name" class="col-lg-3 control-label">{{app_controller.translation.expiration}}</label>
                        <div class="col-lg-3">
                            <div class="input-group">
                                {{input type='string' maxlength=2 value= controller.mm class='form-control' placeholder='MM'}}
                                <span class="input-group-addon">/</span>
                                {{input type='string' maxlength=4 value= controller.yyyy class='form-control' placeholder='YYYY'}}
                            </div>
                        </div>
                    </div>
                {{/unless}}
            </fieldset>
        </form>
    </div>
    <div class="col-lg-1"></div>
</div>
