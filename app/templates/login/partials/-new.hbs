<div class="row">
    <div class="col-lg-6">
        <div class= "well well-lg" style="background-color: rgba(38,85,63, 0.9); border: 0px; height: 550px">
            <div class="row" style="text-align: center">
                <h2 style="color: #ffffff"><strong>{{controller.translation.newCompany}}</strong></h2>
            </div>
            <div class="row" style="margin-top: 30px; margin-bottom: 10px">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{#view 'verify-field' model_val='company' val=controller.name}}
                        {{input id='name' value=controller.name type="text"  placeholder= controller.translation.name class='form-control'}}
                    {{/view}}
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div class="row" style="margin-bottom: 10px">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{input id='vatNumber' valueBinding='vatNumber' type="text"  placeholder= controller.translation.vatNumber class='form-control'}}
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div class="row" style="margin-bottom: 10px">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{input id='street' valueBinding='street' type="text"  placeholder= controller.translation.street class='form-control'}}
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div class="row" style="margin-bottom: 10px">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{input id='city' valueBinding='city' type="text"  placeholder= controller.translation.city class='form-control'}}
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div class="row" style="margin-bottom: 10px">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{input id='zipCode' valueBinding='zipCode' type="text"  placeholder=controller.translation.zipCode class='form-control'}}
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div class="row" style="margin-bottom: 10px">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{view "select" content=app_controller.nations optionLabelPath = "content.country" valueBinding='country' prompt=controller.translation.selectACompany value=country class='form-control'}}
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div class="row" style="margin-bottom: 10px">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{input id='email' valueBinding='companyEmail' type="text"  placeholder= controller.translation.email class='form-control'}}
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div class="row" style="margin-bottom: 30px">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{view "select" id='companyType' valueBinding='companyType' prompt= controller.translation.selectACompanyType  content=companyTypeList value=companyType class='form-control'}}
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class= "well well-lg" style="background-color: rgba(38,85,63, 0.9); border: 0px; height: 550px; margin-bottom: 25px">
        <!--<div class= "well well-lg" style="background-color: rgba(245, 245, 245, 0.4); border: 0; height: 520px">-->
            <div class="row" style="text-align: center">
                <h2  style="color: #ffffff"><strong>{{controller.translation.newUser}}</strong></h2>
            </div>
            <div class="row" style="margin-top: 30px; margin-bottom: 10px">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{input id='firstName' valueBinding='firstName' type="text"  placeholder=controller.translation.firstName class='form-control'}}
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div class="row" style="margin-bottom: 10px">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{input id='lastName' valueBinding='lastName' type="text"  placeholder= controller.translation.lastName class='form-control'}}
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div class="row" style="margin-bottom: 10px">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{#view 'verify-field' model_val='user' val=controller.username}}
                {{!    {{#view 'verify-sing-up-fields' model_val='user' val=username}}
                        {{input id='username' value=controller.username type="text"  placeholder= controller.translation.userName class='form-control'}}
                    {{/view}}
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div class="row" style="margin-bottom: 10px">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{input id='pwd' valueBinding='pwd' type="password"  placeholder= controller.translation.password class='form-control'}}
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div class="row" style="margin-bottom: 30px">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    {{input id='userEmail' valueBinding='userEmail' type="text"  placeholder= controller.translation.email class='form-control'}}
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
    </div>
</div>
<div class= "well well-lg pattern-white" >
<!--<div class= "well well-lg" style="background-color:rgba(245, 245, 245, 0.4); border: 0">-->
    <div class="row" style="margin-left: 30px; margin-right: 30px">
        <div class="col-lg-6">
            <button class="btn btn-default btn-160 pull-left" {{action "change_newLog" 0}}>{{controller.translation.backToLogin}}</button>
        </div>
        <div class="col-lg-6">
            <button class="btn btn-default btn-160 pull-right" {{action 'new_signUp'}}>{{controller.translation.signUp}}</button>
        </div>
    </div>
</div>