<form class="form-horizontal">
    <fieldset>
        <div class="row" style="margin-top: 15px">
            <div class="col-lg-12">
                <table class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>{{app_controller.translation.name}}</th>
                        <th>{{app_controller.translation.type}}</th>
                        <th>{{app_controller.translation.country}}</th>
                        <th>{{app_controller.translation.services}}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each company in app_controller.searchResults}}
                        <tr>
                            <td {{action 'transition_to' 'your-profile/main' company.id 'isView' true}} style="cursor: pointer">{{company.name}}</td>
                            <td {{action 'transition_to' 'your-profile/main' company.id 'isView' true}} style="cursor: pointer">{{company.type}}</td>
                            <td {{action 'transition_to' 'your-profile/main' company.id 'isView' true}} style="cursor: pointer">{{company.country}}</td>
                            <td {{action 'transition_to' 'your-profile/main' company.id 'isView' true}} style="cursor: pointer">
                                {{#each service in company.services}}
                                    {{service}}
                                {{/each}}
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </fieldset>
</form>